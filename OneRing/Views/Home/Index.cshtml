@model List<onering.Models.PortletInstance>
@{
    ViewData["Title"] = "Home Page";
}

<link  rel="stylesheet" href="~/css/home.css" />

<div id="portlet-grid">
@if (Model.Count < 1) {
    <div id="abs-center">
        <h2>No portlets have been added yet.</h2>
        <h2>Add your own through the &quot;Add Portlet&quot; menu ↗</h2>
    </div>
} else {
    @foreach (var inst in Model) {
        <div class="col-md-4">
            <iframe src="@inst.Portlet.Path" frameborder="1" scrolling="no"></iframe>
        </div>
    }
}
</div>
